<Window x:Class="PhanThanhVuongWPF.UpdateCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhanThanhVuongWPF"
        mc:Ignorable="d"
        Title="Update Customer" SizeToContent="Height" Width="480" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Style chung cho các TextBox -->
        <Style x:Key="InputBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Margin" Value="0,4,0,2"/>
        </Style>
        
        <!-- Style cho PasswordBox -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Margin" Value="0,4,0,2"/>
        </Style>
        
        <!-- Style cho DatePicker -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>        
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Margin" Value="0,4,0,2"/>
        </Style>
        
        <!-- Style cho Label -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,10,2"/>
        </Style>
        
        <!-- Style cho các Button -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>
        
        <Style x:Key="UpdateButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#047857"/> <!-- Green color for Update -->
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#065F46"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#4B5563"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E7EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style cho error message -->
        <Style x:Key="ErrorMessageStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E53E3E"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <!-- Style cho ComboBox -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="8,6,5,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Margin" Value="0,4,0,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Border Background="#F8F9FA" CornerRadius="0">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Update Customer" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#1E40AF" 
                           HorizontalAlignment="Center"/>
                <TextBlock Name="CustomerName"
                         Text="Customer: [Name]" 
                         Foreground="#4B5563" 
                         FontSize="14" 
                         HorizontalAlignment="Center" 
                         Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Main Form -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="8" 
                    BorderBrush="#E2E8F0" 
                    BorderThickness="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Customer ID (Read-only) -->
                    <TextBlock Text="Customer ID:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="CustomerID" 
                             Grid.Row="0" Grid.Column="1" 
                             Style="{StaticResource InputBoxStyle}" 
                             IsReadOnly="True" 
                             Background="#F9FAFB"/>

                    <!-- Full Name -->
                    <TextBlock Text="Full Name:" Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <TextBox x:Name="FullName" Style="{StaticResource InputBoxStyle}"/>
                        <TextBlock x:Name="FullNameError" Style="{StaticResource ErrorMessageStyle}" Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Telephone -->
                    <TextBlock Text="Telephone:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <TextBox x:Name="Telephone" Style="{StaticResource InputBoxStyle}"/>
                        <TextBlock x:Name="TelephoneError" Style="{StaticResource ErrorMessageStyle}" Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Email -->
                    <TextBlock Text="Email:" Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                    <StackPanel Grid.Row="3" Grid.Column="1">
                        <TextBox x:Name="Email" Style="{StaticResource InputBoxStyle}"/>
                        <TextBlock x:Name="EmailError" Style="{StaticResource ErrorMessageStyle}" Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Password (Optional for update) -->
                    <TextBlock Text="Password:" Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                    <StackPanel Grid.Row="4" Grid.Column="1">
                        <Grid>
                            <PasswordBox x:Name="Password" 
                                         Style="{StaticResource PasswordBoxStyle}"
                                         PasswordChanged="Password_PasswordChanged"/>
                            <TextBlock Text="Leave blank to keep current password"
                                       Margin="10,0,0,0"
                                       Foreground="#6B7280"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Name="PasswordHint">
                            </TextBlock>
                        </Grid>
                        <TextBlock x:Name="PasswordError" Style="{StaticResource ErrorMessageStyle}" Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Birthday -->
                    <TextBlock Text="Birthday:" Grid.Row="5" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
                    <StackPanel Grid.Row="5" Grid.Column="1">
                        <DatePicker x:Name="Birthday" 
                                    Style="{StaticResource DatePickerStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button Content="Update" 
                        Style="{StaticResource UpdateButtonStyle}" 
                        Click="Update_Click" />
                <Button Content="Cancel" 
                        Style="{StaticResource CancelButtonStyle}" 
                        Click="Cancel_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
