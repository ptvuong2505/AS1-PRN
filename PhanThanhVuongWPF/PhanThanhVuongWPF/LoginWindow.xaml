<Window x:Class="PhanThanhVuongWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="White">
        <StackPanel Margin="32,24,32,0" VerticalAlignment="Center">
            <!-- Tiêu đề Sign In -->
            <TextBlock Text="Sign In" 
                       FontSize="28" 
                       FontWeight="SemiBold" 
                       Foreground="#333333"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,40"/>

            <!-- Email Field -->
            <TextBlock Text="Email" 
                       Margin="0,0,0,8" 
                       FontWeight="Regular" 
                       Foreground="#555555"/>
            <Border BorderThickness="1" 
                    BorderBrush="#DDDDDD" 
                    Margin="0,0,0,20" 
                    Height="46">
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         BorderThickness="0" 
                         VerticalContentAlignment="Center" 
                         Padding="12,0,12,0" 
                         FontSize="14" 
                         Background="Transparent"/>
            </Border>

            <!-- Password Field -->
            <TextBlock Text="Password" 
                       Margin="0,0,0,8" 
                       FontWeight="Regular" 
                       Foreground="#555555"/>
            <Border BorderThickness="1" 
                    BorderBrush="#DDDDDD" 
                    Margin="0,0,0,30" 
                    Height="46">
                <PasswordBox x:Name="PasswordBox" 
                             BorderThickness="0" 
                             VerticalContentAlignment="Center" 
                             Padding="12,0,12,0" 
                             FontSize="14" 
                             Background="Transparent"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
            </Border>
            <Button Content="LOGIN" 
                    Command="{Binding LoginCommand}" 
                    Height="42" 
                    Background="#3B82F6" 
                    Foreground="White" 
                    BorderThickness="0" 
                    FontSize="15" 
                    FontWeight="SemiBold" Width="178">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Error message -->
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       Margin="0,0,0,20" 
                       FontSize="13" 
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Center"/>

            <!-- Login Button -->
        </StackPanel>
    </Grid>
</Window>
